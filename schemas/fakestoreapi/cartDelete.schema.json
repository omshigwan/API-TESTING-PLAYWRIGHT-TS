{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "userId", "date", "products", "__v"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "userId": {
      "type": "integer",
      "minimum": 1
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}T"
    },
    "products": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["productId", "quantity"],
        "properties": {
          "productId": {
            "type": "integer",
            "minimum": 1
          },
          "quantity": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "__v": {
      "type": "integer",
      "minimum": 0
    }
  }
}
