{
  "name": "playwright-demo-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "sanity:Fakestore": "playwright test tests/fakestoreapi --grep @Sanity --project=chromium",
    "e2eDev:Fakestore": "env-cmd -f .env.dev playwright test tests/fakestoreapi --grep @FakeStoreRegression --project=chromium",
    "e2ePreprod:Fakestore": "env-cmd -f .env.staging  cross-env NODE_ENV=preprod playwright test tests/fakestoreapi --grep @FakeStoreRegression --project=chromium",
    "e2eProd:Fakestore": "env-cmd -f .env.prod  cross-env NODE_ENV=prod playwright test tests/fakestoreapi --grep @FakeStoreRegression --project=chromium",
    "sanity:BookingApp": "playwright test tests/bookingApp --grep @Sanity --project=chromium",
    "e2eDev:BookingApp": "env-cmd -f .env.dev playwright test tests/bookingApp --grep @BookingAppRegression --project=chromium",
    "e2ePreprod:BookingApp": "env-cmd -f .env.staging  cross-env NODE_ENV=preprod playwright test tests/bookingApp --grep @BookingAppRegression --project=chromium",
    "e2eProd:BookingApp": "env-cmd -f .env.prod cross-env NODE_ENV=prod playwright test tests/bookingApp --grep @BookingAppRegression --project=chromium",
    "prettier": "npx prettier --check 'tests/**/*.{js,ts,json}' 'utilities/**/*.{js,ts,json}' 'schemas/**/*.{js,ts,json}' 'fixtures/**/*.{js,ts,json}'",
    "prettier:fix": "npx prettier --write 'tests/**/*.{js,ts,json}' 'utilities/**/*.{js,ts,json}' 'schemas/**/*.{js,ts,json}' 'fixtures/**/*.{js,ts,json}'",
    "pre-commit": "npx prettier --check 'tests/**/*.{js,ts,json}' 'utilities/**/*.{js,ts,json}' 'schemas/**/*.{js,ts,json}' 'fixtures/**/*.{js,ts,json}'",
    "show-report": "playwright show-report reports/playwright-report ",
    "allure-generate": "npx allure generate allure-results --clean",
    "allure-generate-report": "npx allure open allure-report",
    "allure-report": "npx allure generate allure-results --clean && npx allure open allure-report"
  },
  "keywords": [],
  "author": "om-shigvan",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^25.2.2",
    "ajv": "^8.17.1",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.4",
    "env-cmd": "^11.0.0",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "npm@11.6.2"
}
